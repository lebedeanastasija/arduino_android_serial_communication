<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anastasiya.arduinoserialcom.ProfileActivity">

    <ImageView
        android:id="@+id/imgvTeacher"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:baselineAlignBottom="true"
        app:srcCompat="@mipmap/ic_person_black_24dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvTSurname"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="TextView"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="15dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        tools:text="Surname" />

    <TextView
        android:id="@+id/tvTName"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="Name"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="50dp"
        android:layout_below="@+id/tvTSurname"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/tvTPatronymic"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="Patronymic"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="85dp"
        android:layout_below="@+id/tvTName"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"/>

    <TextView
        android:id="@+id/tvTUID"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:text="UID"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="220dp"
        tools:text="UID"
        android:layout_below="@+id/tvTPatronymic"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/tvTSubject"
        android:layout_width="190dp"
        android:layout_height="25dp"
        android:fontFamily="serif"
        android:text="Subject"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="255dp"
        tools:text="Subject"
        android:layout_below="@+id/tvTUID"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="348dp"
        android:layout_height="39dp"
        android:fontFamily="serif"
        android:text="EDIT"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="300dp"
        tools:text="EDIT"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imgvTeacher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</android.widget.RelativeLayout>
