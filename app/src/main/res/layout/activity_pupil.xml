<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anastasiya.arduinoserialcom.PupilActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="128dp"
        app:srcCompat="@mipmap/ic_person_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="211dp"
        android:layout_height="28dp"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp" />

    <TextView
        android:id="@+id/tvSurname"
        android:layout_width="211dp"
        android:layout_height="24dp"
        android:text="Surname"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

    <TextView
        android:id="@+id/tvPatronymic"
        android:layout_width="210dp"
        android:layout_height="26dp"
        android:text="Patronymic"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvSurname" />

    <TextView
        android:id="@+id/tvClass"
        android:layout_width="125dp"
        android:layout_height="21dp"
        android:text="Class"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPatronymic" />

    <TextView
        android:id="@+id/tvTSubject"
        android:layout_width="125dp"
        android:layout_height="23dp"
        android:text="Subject"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-2dp"
        app:layout_constraintTop_toBottomOf="@+id/tvClass" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="96dp"
        android:layout_height="31dp"
        android:text="Score type"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="126dp"
        android:layout_height="29dp"
        android:text="Class work"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTSubject" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="124dp"
        android:layout_height="25dp"
        android:text="Control work"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="123dp"
        android:layout_height="28dp"
        android:text="Test"
        app:layout_constraintLeft_toRightOf="@+id/textView6"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="99dp"
        android:layout_height="23dp"
        android:text="Score"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="61dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="38dp"
        android:layout_height="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/radioButton3"
        tools:layout_editor_absoluteY="294dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

</android.support.constraint.ConstraintLayout>
